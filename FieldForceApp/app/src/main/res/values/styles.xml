<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ImageView">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="AppTheme.TextView.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_xMedium</item>
    </style>

    <style name="AppTheme.TextView.Description">
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="AppTheme.ParentLayout">
        <item name="android:paddingTop">@dimen/parent_padding_ver</item>
        <item name="android:paddingBottom">@dimen/parent_padding_ver</item>
        <item name="android:paddingLeft">@dimen/parent_padding_hor</item>
        <item name="android:paddingRight">@dimen/parent_padding_hor</item>
    </style>

    <style name="AppTheme.ParentLayout.RecyclerItem">
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="productContainer" parent="AppTheme.ParentLayout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_marginBottom">@dimen/margin_xxxSmall</item>
    </style>

    <style name="AppTheme.TextView.Field">
        <item name="android:textSize">@dimen/text_xMedium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="AppTheme.TextView.Field.Require">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="AppTheme.TextView.Value"></style>

    <style name="AppTheme.EditText"></style>
</resources>
